    <TextView
        android:id="@+id/labelLeagueInfoStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/li_starts"
        android:textSize="@dimen/txtSmallSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelLeagueInfoUrl" />

    <TextView
        android:id="@+id/textLeagueInfoStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
