<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundDarkBlue"
    android:clickable="true"
    android:focusable="true"
    android:theme="@style/AppTheme.DarkBlue"
    tools:context=".Fragments.LeagueInfoFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/labelLeagueInfoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/li_league_name"
        android:textSize="@dimen/txtSmallSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLeagueInfoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="tmp_leaguename"
        android:textSize="@dimen/txtSmallSize"
        app:layout_constraintStart_toEndOf="@+id/labelLeagueInfoName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelLeagueInfoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/li_description"
        android:textSize="@dimen/txtSmallSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelLeagueInfoName" />

    <TextView
        android:id="@+id/textLeagueInfoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="tmp_description"
        android:textSize="@dimen/txtSmallSize"
        app:layout_constraintStart_toEndOf="@+id/labelLeagueInfoDescription"
        app:layout_constraintTop_toBottomOf="@+id/textLeagueInfoName" />

    <TextView
        android:id="@+id/labelLeagueInfoRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/li_register_at"
        android:textSize="@dimen/txtSmallSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelLeagueInfoDescription" />

    <TextView
        android:id="@+id/textLeagueInfoRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
